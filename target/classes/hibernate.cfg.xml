<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>

		<property name="hibernate.connection.driver_class">
			oracle.jdbc.OracleDriver
		</property>
		
		<property name="hibername.dialect">
			org.hibernate.dialect.Oracle10gDialect
		</property>
		
		<property name="hibernate.connection.url">
			jdbc:oracle:thin:@rds-oracle-database.ccggbul6w7of.us-east-2.rds.amazonaws.com
			
		</property>
		
		<property name="hibernate.connection.username">
			DB_Admin
		</property>
		
		<property name="hibernate.connection.password">
			Oracle18
		</property>
		
		<property name="hibernate.connection.pool_size">
			5
		</property>
		
		<property name="show_sql">
			true
		</property>
		
		<property name="hibernate.hbm2ddl.auto">
			update
		</property>
		
		
		<!-- <mapping resource="cbay.hbm.xml"/> -->
		<mapping class="com.Customers"/>
		<mapping class="com.OnlineBanking.Accounts"/>
		<mapping class="com.OnlineBanking.Transactions"/>
		<mapping class="com.OnlineBanking.Alerts"/>
		<mapping class="com.OnlineBanking.RSA"/>
	
		
	</session-factory>
</hibernate-configuration>